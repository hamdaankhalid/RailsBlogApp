<h1>
    <%= @article.title %>
</h1>

<p>
    <%= @article.body %>
</p>

<ul>
    <li>
        <%= link_to "Edit", edit_article_path(@article) %>
    </li>

    <li>
        <%= link_to "Delete", article_path(@article), :method => :delete, :confirm => "Are you sure ?"%>
    </li>
</ul>

<h2> Comments </h2>
<% @article.comments.each do |comment| %>
  <%= render comment %>
<% end %>

<h2> Add a comment: </h2>
<%= render 'comments/form'%>

<%= link_to "Back", articles_path %>
