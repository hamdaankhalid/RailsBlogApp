<h1>
Admin Login
</h1>

<div>


<h2> Create OTP </h2>

<%= form_with url:"/otp" do |form| %>
    <div>
        <%= form.label :phone_number, "Phone" %><br>
        <%= form.text_field :phone_number %>
    </div>

    <div>
        <%= form.submit "Send" %>
    </div>
<% end %>

</div>

<div>

<%= form_with url:"/admin/login" do |form| %>
    <div>
        <%= form.label :email, "Email" %><br>
        <%= form.text_field :email %>
    </div>

    <div>
        <%= form.label :otp %><br>
        <%= form.text_field :otp %>
    </div>

    <div>
        <%= form.submit "Submit" %>
    </div>
<% end %>

</div>